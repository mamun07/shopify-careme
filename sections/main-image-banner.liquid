<div class="image_banner">
  <div class="container">
    <div class="row">
      <div class="banners">
        <div class="left_banner">Left Image</div>
        <div class="right_banner">Right Image</div>
      </div>
    </div>
  </div>
</div>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
  .banners {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
</style>

{% schema %}
{
  "name": "Image With Text",
  "settings": [
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "spotlight_bg",
      "label": "Background",
      "default": "#2d2d2d"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "paddign",
      "min": 15,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding",
      "default": 50
    },
    {
      "type": "image_picker",
      "id": "1st_img",
      "label": "First Image"
    },
    {
      "type": "url",
      "id": "1st_img_url",
      "label": "First Link"
    },
    {
      "type": "image_picker",
      "id": "2nd_img",
      "label": "Second Image"
    },
    {
      "type": "url",
      "id": "2nd_img_url",
      "label": "Second Link"
    }
  ],
  "presets": [
    {
      "name": "Image With Text"
    }
  ]
}
{% endschema %}
