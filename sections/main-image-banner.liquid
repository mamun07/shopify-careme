<div class="image_banner">
  <div class="container">
    <div class="row">
      <div class="banners">
        <div class="left_banner">
          {{ section.settings.image1 | image_url: width: 1000 | image_tag }}
        </div>
        <div class="right_banner">
          {{ section.settings.image2 | image_url: width: 1000 | image_tag }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
  .banners {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
</style>

{% schema %}
{
  "name": "Custom Image Banner",
  "settings": [
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "spotlight_bg",
      "label": "Background",
      "default": "#2d2d2d"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "paddign",
      "min": 15,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding",
      "default": 50
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image One"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image Two"
    }
  ],
  "presets": [
    {
      "name": "Custom Image Banner"
    }
  ]
}
{% endschema %}
