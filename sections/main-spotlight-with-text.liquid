<div class="spotlight_with_text_bg">
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        <div class="spotlight_main">
          <div class="entry_thumb">
            {% if block.settings.image %}
              {{
                block.settings.image
                | image_url: width: 500
                | image_tag:
                  sizes: '(min-width:1600px) 960px, (min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)'
              }}
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
            <a>{{ block.settings.button }}</a>
          </div>
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .spotlight_with_text_bg {
    padding: 50px 200px !important;
    background: #000;
  }
  .spotlight_with_text_bg .row {
    display: grid;
    grid-template-columns: 33.33% 33.33% 33.33%;
    gap: 30px;
    margin-top: -200px;
  }
  .spotlight_main .entry_thumb {
    position: relative;
  }
  .spotlight_main .entry_thumb a {
    position: absolute;
    bottom: 50px;
    left: 50%;
    color: #121212;
    background: #fff;
    width: 200px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    margin-left: -100px;
    transition: 0.3s;
  }
  .spotlight_main .entry_thumb a:hover {
    background: #da5894;
    border: 1px solid #fff;
    color: #fff;
  }
  .spotlight_main h2 {
    color: #fff;
  }
  .spotlight_main p {
    color: #fff;
  }
</style>

{% schema %}
{
  "name": "Spotlight With Text",
  "settings": [
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "spotlight_bg",
      "label": "Background",
      "default": "#2d2d2d"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "paddign",
      "min": 15,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title Text"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description Text"
        },
        {
          "type": "text",
          "id": "button",
          "label": "Button",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Spotlight With Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
